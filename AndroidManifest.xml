        </activity>
        
        <activity android:name="com.level42.mixtit.activities.TalkListActivity"/>                
        <activity android:name="com.level42.mixtit.activities.TalkActivity"/>               
        <activity android:name="com.level42.mixtit.activities.ActiviteActivity"/>  
              
