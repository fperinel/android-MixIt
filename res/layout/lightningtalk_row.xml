<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rowLTalk"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:gravity="right"
    android:minHeight="50dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/txtLTalkTitre"
            android:textColor="@color/mixitBlue"
            android:textSize="16dip"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:text="Titre du talk"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:layout_weight="0.96" />

        <TextView
            android:id="@+id/txtLTalkVotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:text="42 votes"
            android:textColor="@color/mixitGrey"
            android:textSize="16dip"
            android:textStyle="bold" />
        
    </LinearLayout>
	    
    <TextView
        android:id="@+id/txtLTalkShortDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Titre du talk Titre du talk Titre du talk Titre du talk Titre du talk Titre du talk Titre du talk Titre du talk Titre du talk"
        android:layout_margin="4dip"
        android:paddingLeft="20dp"
        android:textSize="14dip"
        android:textColor="@color/white" />
    
</LinearLayout>